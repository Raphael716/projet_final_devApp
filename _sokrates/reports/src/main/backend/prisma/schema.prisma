generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   
  email     String   @unique(map: "email")
  password  String   
  createdAt DateTime @default(now())
  admin     Int      @default(0)
}

model Builds {
  id           Int      @id @default(autoincrement())
  nom          String
  description  String?
  version      String?
  statut       String?
  proprietaire String?
  updatedAt    DateTime @default(now()) @map("updatedAt")
  assets       Asset[]
}

model Asset {
  id        Int      @id @default(autoincrement())
  filename  String
  original  String
  mimetype  String
  size      Int
  path      String
  buildId   Int
  build     Builds   @relation(fields: [buildId], references: [id], onDelete: Cascade)
  version   String?
  description String?
  createdAt DateTime @default(now())
}