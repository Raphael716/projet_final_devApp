generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model asset {
  id          Int       @id @default(autoincrement())
  filename    String    @db.VarChar(255)
  original    String    @db.VarChar(255)
  mimetype    String    @db.VarChar(100)
  size        Int
  path        String    @db.VarChar(255)
  buildId     Int
  version     String?   @db.VarChar(50)
  description String?   @db.Text
  createdAt   DateTime? @default(now()) @db.DateTime(0)
  builds      builds    @relation(fields: [buildId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "asset_ibfk_1")

  @@index([buildId], map: "buildId")
}

model builds {
  id           Int       @id @default(autoincrement())
  nom          String    @db.VarChar(255)
  description  String?   @db.Text
  version      String?   @db.VarChar(50)
  statut       String?   @db.VarChar(50)
  proprietaire String?   @db.VarChar(255)
  updatedAt    DateTime? @default(now()) @db.DateTime(0)
  asset        asset[]
}

model user {
  id        Int       @id @default(autoincrement())
  username  String    @db.VarChar(255)
  email     String    @unique(map: "email") @db.VarChar(255)
  password  String    @db.VarChar(255)
  createdAt DateTime? @default(now()) @db.DateTime(0)
  admin     Int       @default(0) @db.TinyInt
}
